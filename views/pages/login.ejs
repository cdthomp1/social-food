<!DOCTYPE html>
<html>

<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>
  <div class="login-box">
    <div class="card">
      <div class="card-header">
        <h3 class="login">Log In</h3>
      </div>
      <div class="card-body">
        <form action="/login-succ">
          <div class="form-group">
            <input type="text" class="form-control" id="emailLogin" name="email" placeholder="Email Address">
            <small id="emailHelp" class="form-text text-muted float-right">We'll never share your email with anyone
              else.</small>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" id="paswordLogin" name="password" placeholder="Password">
          </div>
          <div class="button-box">
            <button class="btn btn-primary login-btn">Login</button>
          </div>
        </form>
        <p class="needAccount">
          <p>Need an account?<br><a href="/register">Sign Up Now!</a></p>
        </p>

      </div>
    </div>
  </div>

  <% include ../partials/scripts.ejs %>

</body>

</html>